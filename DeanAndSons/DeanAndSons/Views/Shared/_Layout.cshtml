@using DeanAndSons.Models

<!DOCTYPE html>
<html lang="en-us">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Dean & Sons.</title>
    @Styles.Render("~/Content/css")

    @if (Request.IsAuthenticated)
    {
        <link href="~/Content/@User.Identity.GetSiteTheme()" rel="stylesheet" />
    }
    else
    {
        <link href="~/Content/Site.css" rel="stylesheet" />
    }

    @Scripts.Render("~/bundles/modernizr")
    @* ********** Move scripts here as seems only way to get JQuery working on pages ********** *@
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <meta name="description" content="Homepage of the Dean & Sons Estate Agency.  Houses, flats, bungalows for sale and rent" />
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Dean & Sons", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Properties", "Index", "Propertys")</li>
                    <li>@Html.ActionLink("Services", "IndexCustomer", "Services")</li>
                    <li>@Html.ActionLink("Events", "IndexCustomer", "Events")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    @if (User.IsInRole("Staff") || User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink("IMS", "Index", "IMS")</li>
                        <li>@Html.ActionLink("CMS", "IndexCMS", "Home")</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>


    @RenderBody()


    <div class="container-fluid dc-footer">
        <div class="container">
            <footer>
                <p>Website design by JUICY PLC. &copy; @DateTime.Now.Year - All content property of Dean & Sons. Ltd | Cookie Policy | Privacy Policy | Terms and Conditions</p>
            </footer>
        </div>
    </div>

    @RenderSection("scripts", required: false)
</body>
</html>