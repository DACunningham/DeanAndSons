@using DeanAndSons.Models.Global.ViewModels
@model ProfileStaffDetailsViewModel

@{
    ViewBag.Title = "ProfileDetails";
}

@* ********** Page Header ********** *@

<div class="container-fluid dc-header">
    <div class="container">
        <header>
            <div class="logo1">Dean & Sons.</div>
            <div class="logo2">Family Estate Agency</div>
            <div class="col-md-12 dc-pageHead">
                <p class="pageTitle">Profile Details</p>
            </div>

        </header>
    </div>
</div>

<div class="container">
    <div class="row">
        @* ********** Image ********** *@
        <div class="col-md-3">
            <img src="@Model.Image.Location" class="img-responsive center-block dc-profileImg" alt="@Model.Surname image" />
        </div>

        @* ********** Body ********** *@
        <div class="col-md-9">

            <div class="row">
                <div class="col-md-12">
                    <h2>@Model.UserNameDisp</h2>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <p>Name: @Model.Forename @Model.Surname</p>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <p>Email: @Model.Email</p>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <p>Location: @Model.Contact.Town</p>
                </div>
            </div>

        </div>

    </div>

    <hr />

    <div class="row">
        <div class="col-md-12">
            <h3>My Properties</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            @Html.Partial("_StaffPropertyList", Model.PropertysOwned)
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <h3>My Services</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            @Html.Partial("_StaffServiceList", Model.ServicesOwned)
        </div>
    </div>


    <div class="row">
        <div class="col-md-12">
            <h3>My Events</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            @Html.Partial("_StaffEventList", Model.EventsOwned)
        </div>
    </div>

    @{
        if (Model.ID == Model.CurrentUserID)
        {
            <div class="row">
                <div class="col-md-6">
                    @Html.ActionLink("Direct Messages", "Index", "Conversations", new { userId = Model.ID }, new { @class = "btn btn-default pull-left dc-btn-space", role = "button" })
                </div>
                <div class="col-md-6">
                    @Html.ActionLink("Edit Profile", "ProfileEdit", new { userId = Model.ID }, new { @class = "btn btn-default pull-right dc-btn-space", role = "button" })
                </div>
            </div>
        }
    }
</div>