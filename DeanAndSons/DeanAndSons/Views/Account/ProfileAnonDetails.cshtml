@model IEnumerable<DeanAndSons.Models.Property>

@{
    ViewBag.Title = "ProfileDetails";
}

@* ********** Page Header ********** *@

<div class="container-fluid dc-header">
    <div class="container">
        <header>
            <div class="logo1">Dean & Sons.</div>
            <div class="logo2">Family Estate Agency</div>
            <div class="col-md-12 dc-pageHead">
                <p class="pageTitle">Profile Details</p>
            </div>

        </header>
    </div>
</div>

<div class="container">
    <div class="row">
        @* ********** Image ********** *@
        <div class="col-md-3">
            <img src="~/Storage/Global/NoImg.jpg" class="img-responsive center-block dc-profileImg" alt="image" />
        </div>

        @* ********** Body ********** *@
        <div class="col-md-9">

            <div class="row">
                <div class="col-md-12">
                    <h2>Anonymous</h2>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <p>Name: Joe Bloggs</p>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <p>
                        As an anonymous user you can store all of your favourite properties here; however, they will be lost when you close your browser.
                        Why not become a registered member and enjoy the benefits of being able to save all of your favourite properties, searches and 
                        details as to your perfect property to your permanent profile?
                    </p>
                </div>
            </div>

        </div>

    </div>

    <hr />

    <div class="row">

        <div class="col-md-12">
            <h3>Saved Properties</h3>

            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Type)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SaleState)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Created)
                    </th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td class="col-md-4">
                            @Html.ActionLink(item.Title, "Details", "Propertys", new { id = item.PropertyID }, null)
                        </td>
                        <td class="col-md-2">
                            @Html.DisplayFor(modelItem => item.Type)
                        </td>
                        <td class="col-md-1">
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td class="col-md-1">
                            @Html.DisplayFor(modelItem => item.SaleState)
                        </td>
                        <td class="col-md-2">
                            @Html.DisplayFor(modelItem => item.Created)
                        </td>
                    </tr>
                }
            </table>

        </div>

    </div>
</div>