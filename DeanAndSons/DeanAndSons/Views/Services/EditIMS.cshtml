@model DeanAndSons.Models.IMS.ViewModels.ServiceEditIMSViewModel

@{
    ViewBag.Title = "Edit";
}

@* ********** Page Header ********** *@

<div class="container-fluid dc-header">
    <div class="container">
        <header>
            <div class="logo1">Dean & Sons.</div>
            <div class="logo2">Family Estate Agency</div>
            <div class="col-md-12 dc-pageHead">
                <p class="pageTitle">Edit Service - IMS</p>
            </div>

        </header>
    </div>
</div>

<div class="container body-content">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <br />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ServiceID)

            <h1>@Model.Title</h1>
            <h3>Associated People</h3>
            <hr />

            <div class="form-group">
                @Html.LabelFor(m => m.StaffOwner, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.DropDownListFor(m => m.StaffOwnerID, Model.StaffOwner, htmlAttributes: new { @class = "form-control" })
                </div>
            </div>

            @* ********** Buttons ********** *@

            <div class="row">

                <div class="col-md-offset-2 col-md-6">
                    @Html.ActionLink("Cancel", "IndexIMS", null, new { @class = "btn btn-default text-center", role = "button" })
                </div>

                <div class="col-md-4">
                    <button type="submit" class="btn btn-success pull-right">Save</button>
                </div>

            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}