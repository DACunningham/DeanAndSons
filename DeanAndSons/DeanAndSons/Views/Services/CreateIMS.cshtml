@model DeanAndSons.Models.IMS.ViewModels.ServiceCreateIMSViewModel

@{
    ViewBag.Title = "CreateIMS";
}

@* ********** Page Header ********** *@

<div class="container-fluid dc-header">
    <div class="container">
        <header>
            <div class="logo1">Dean & Sons.</div>
            <div class="logo2">Family Estate Agency</div>
            <div class="col-md-12 dc-pageHead">
                <p class="pageTitle">Create New Service - IMS</p>
            </div>

        </header>
    </div>
</div>

<div class="container body-content">
    @using (Html.BeginForm("CreateIMS", "Services", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <h3>General</h3>
            <hr />

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.SubTitle, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SubTitle, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                    @Html.ValidationMessageFor(model => model.SubTitle, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                </div>
            </div>

            <h3>Associated People</h3>
            <hr />

            <div class="form-group">
                @Html.LabelFor(m => m.StaffOwner, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.DropDownListFor(m => m.StaffOwnerID, Model.StaffOwner, htmlAttributes: new { @class = "form-control" })
                </div>
            </div>

            @* ********** Buttons ********** *@

            <div class="row">

                <div class="col-md-offset-2 col-md-6">
                    @Html.ActionLink("Cancel", "IndexIMS", null, new { @class = "btn btn-default text-center", role = "button" })
                </div>

                <div class="col-md-4">
                    <button type="submit" class="btn btn-success pull-right">Create</button>
                </div>

            </div>

            @* ********** Image Info ********** *@

            @*<div class="col-md-12">
                @Ajax.ActionLink("Upload More Images...", "MoreImages", "Propertys", new { },
                   new AjaxOptions
                   {
                       HttpMethod = "GET",
                       InsertionMode = InsertionMode.InsertAfter,
                       UpdateTargetId = "moreImages"
                   })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Images, "Header Image", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Images, new { type = "file" })
                    @Html.ValidationMessageFor(model => model.Images, "", new { @class = "text-danger" })
                </div>
            </div>

            @for (int i = 0; i < 3; i++)
            {
                @Html.Partial("_ImageUpload", Model)
            }

            <div id="moreImages">

            </div>*@

            @*<div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>*@
        </div>
    }

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}