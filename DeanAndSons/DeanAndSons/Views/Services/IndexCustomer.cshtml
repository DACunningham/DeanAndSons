@using DeanAndSons.Models.WAP.ViewModels
@model IEnumerable<ServiceIndexViewModel>

@{
    ViewBag.Title = "Services";
}

@* ********** Page Header ********** *@

<div class="container-fluid dc-header">
    <div class="container">
        <header>
            <div class="logo1">Dean & Sons.</div>
            <div class="logo2">Family Estate Agency</div>
            <div class="col-md-12 dc-pageHead">
                <p class="pageTitle">Service Index</p>
            </div>

        </header>
    </div>
</div>

<div class="container body-content">

    <div class="row">

        @foreach (var item in Model)
        {
            <a id="tab" href="@Url.Action("DetailsCustomer", "Services", new { id = item.ServiceID })">
                <div class="col-md-4">
                    <div class="row">
                        <div class="col-md-12">
                            <img src="@item.Image.Location" class="img-responsive center-block dc-Tiles" alt="@item.Title image" />
                        </div>
                        <div class="col-md-12">
                            <h3 class="text-center">@item.Title</h3>
                        </div>
                        <div class="col-md-12">
                            <p class="text-center">@item.SubTitle</p>
                        </div>
                    </div>
                </div>
            </a>
            
        }

    </div>
</div>