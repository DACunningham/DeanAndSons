@model DeanAndSons.Models.IMS.ViewModels.StaffManagerEditViewModel

@{
    ViewBag.Title = "StaffManagerEdit";
}

@* ********** Page Header ********** *@

<div class="container-fluid dc-header">
    <div class="container">
        <header>
            <div class="logo1">Dean & Sons.</div>
            <div class="logo2">Family Estate Agency</div>
            <div class="col-md-12 dc-pageHead">
                <p class="pageTitle">Edit Staff Details - IMS</p>
            </div>

        </header>
    </div>
</div>

<div class="container body-content">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

            <h3>@Model.Forename's Team</h3>
            <hr />

            <div class="form-group">
                @Html.LabelFor(m => m.Rank, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.EnumDropDownListFor(m => m.Rank, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Superior, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.DropDownList("SuperiorID", null, htmlAttributes: new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Subordinates, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.ListBoxFor(m => m.SubordinateIds, Model.Subordinates, htmlAttributes: new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-6">
                    @Html.ActionLink("Cancel", "StaffManagerIndex", null, new { @class = "btn btn-default" })
                </div>
                <div class="col-md-4">
                    <input id="submit" type="submit" value="Save" class="btn btn-success pull-right" />
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}