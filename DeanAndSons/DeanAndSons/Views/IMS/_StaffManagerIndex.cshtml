@model DeanAndSons.Models.IMS.ViewModels.StaffManagerIndexIMSViewModel

@* ********** Director's ********** *@

<h3>Directors</h3>

<table class="table">
    <tr>

        <th>
            UserName
        </th>
        <th>
            Forename
        </th>
        <th>
            Surname
        </th>
        <th>
            Superior
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Directors)
    {
        <tr>
            <td class="col-md-3">
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td class="col-md-2">
                @Html.DisplayFor(modelItem => item.Forename)
            </td>
            <td class="col-md-2">
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td class="col-md-3">
                @Html.DisplayFor(modelItem => item.Superior.Forename)
                @Html.DisplayFor(modelItem => item.Superior.Surname)
            </td>
            <td class="col-md-2">
                <a id=@item.Id class="deleteStaff btn btn-danger btn-sm pull-right" href="#deleteModal" data-toggle="modal" data-target="#deleteModal">Delete</a>
                @Html.ActionLink("Edit", "StaffManagerEdit", new { id = item.Id }, new { @class = "btn btn-default btn-sm pull-right", role = "button" })
            </td>
        </tr>
    }

</table>

