@using Microsoft.AspNet.Identity

@{
    ViewBag.Title = "Index";
}

@* ********** Page Header ********** *@

<div class="container-fluid dc-header">
    <div class="container">
        <header>
            <div class="logo1">Dean & Sons.</div>
            <div class="logo2">Family Estate Agency</div>
            <div class="col-md-12 dc-pageHead">
                <p class="pageTitle">Information Management System</p>
            </div>

        </header>
    </div>
</div>


<div class="container body-content">
    <div class="row">

        <a id="tab" href="@Url.Action("TeamViewer", "IMS", null)">
            <div class="col-md-4">
                <div class="row">
                    <div class="col-md-12">
                        <img src="/Storage/Global/Hierarchy.png" style="background-color: transparent; height: 175px; width: 175px;" class="img-responsive center-block" alt="image" />
                    </div>
                    <div class="col-md-12">
                        <h3 class="text-center">Hierarchy Viewer</h3>
                    </div>
                </div>
            </div>
        </a>

        <a id="tab" href="@Url.Action("ProfileDetails", "Account", new { userID = User.Identity.GetUserId() })">
            <div class="col-md-4">
                <div class="row">
                    <div class="col-md-12">
                        <img src="/Storage/Global/Profile.png" style="background-color: transparent; height: 175px; width: 175px;" class="img-responsive center-block" alt="image" />
                    </div>
                    <div class="col-md-12">
                        <h3 class="text-center">Staff Profile</h3>
                    </div>
                </div>
            </div>
        </a>

        <a id="tab" href="@Url.Action("StaffManagerIndex", "IMS", null)">
            <div class="col-md-4">
                <div class="row">
                    <div class="col-md-12">
                        <img src="/Storage/Global/AddRemove.png" style="background-color: transparent; height: 175px; width: 175px;" class="img-responsive center-block" alt="image" />
                    </div>
                    <div class="col-md-12">
                        <h3 class="text-center">Add & Remove Staff</h3>
                    </div>
                </div>
            </div>
        </a>

        <a id="tab" href="@Url.Action("IndexIMS", "Propertys", null)">
            <div class="col-md-4">
                <div class="row">
                    <div class="col-md-12">
                        <img src="/Storage/Global/Property.png" style="background-color: transparent; height: 175px; width: 175px;" class="img-responsive center-block" alt="image" />
                    </div>
                    <div class="col-md-12">
                        <h3 class="text-center">Your Properties</h3>
                    </div>
                </div>
            </div>
        </a>

        <a id="tab" href="@Url.Action("IndexIMS", "Services", null)">
            <div class="col-md-4">
                <div class="row">
                    <div class="col-md-12">
                        <img src="/Storage/Global/Service.png" style="background-color: transparent; height: 175px; width: 175px;" class="img-responsive center-block" alt="image" />
                    </div>
                    <div class="col-md-12">
                        <h3 class="text-center">Your Services</h3>
                    </div>
                </div>
            </div>
        </a>

        <a id="tab" href="@Url.Action("IndexIMS", "Events", null)">
            <div class="col-md-4">
                <div class="row">
                    <div class="col-md-12">
                        <img src="/Storage/Global/Event.png" style="background-color: transparent; height: 175px; width: 175px;" class="img-responsive center-block" alt="image" />
                    </div>
                    <div class="col-md-12">
                        <h3 class="text-center">Your Events</h3>
                    </div>
                </div>
            </div>
        </a>

    </div>

</div>