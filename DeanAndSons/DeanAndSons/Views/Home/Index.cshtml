@model DeanAndSons.Models.Global.ViewModels.HomeIndexViewModel

@{
    ViewBag.Title = "Home Page";
}

@* ********** Page Header ********** *@

<div class="container-fluid dc-header">
    <div class="container">
        <header>
            <div class="logo1">Dean & Sons.</div>
            <div class="logo2">Family Estate Agency</div>
            <div class="col-md-12 dc-pageHead">
                <p class="pageTitle">Property Specialists</p>
            </div>

        </header>
    </div>
</div>

<div class="container">

    <div class="row">
        <div class="col-md-12">
            <h2>Latest Properties To Market...</h2>
        </div>
    </div>

    <div class="row dc-rows">

        @foreach (var item in Model.Properties)
        {
            <div class="col-md-4">

                <div class="row">

                    <div class="col-md-12 text-center">
                        <h3>@Html.ActionLink(item.Title, "Details", "Propertys", new { id = item.PropertyID }, null)</h3>
                    </div>
                    <div class="col-md-12">
                        <a href=@Url.Action("Details", "Propertys", new { id = item.PropertyID })>
                            <img src="@item.ImageLocation" class="img-responsive center-block dc-Tiles-Lg" alt="@item.Title" />
                        </a>
                    </div>

                </div>

            </div>
        }

    </div>

    <div class="row dc-rows">
        <div class="col-md-4">
            <a href="/Services/Details/2">
                <img src="/Storage/Services/af908198-fff2-4bbb-bf1d-d0f91fe3da3bAgency.png" class="img-responsive center-block" alt="137 New Road Bromham, Chippenham image" />
            </a>
        </div>
        <div class="col-md-8">
            <h2>Our local knowledge helped over 4,000* customers find their place called home last year.</h2>
            <p>With thousands of buyers and tenants registering in our branches every month, we help a customer move every 40* minutes.</p>
        </div>
    </div>

    <div class="row dc-rows">
        <div class="col-md-4">
            <a href="/Services/Details/2">
                <img src="/Storage/Global/SoldHouse.jpg" style="height: 200px; width: 300px;" class="img-responsive center-block" alt="137 New Road Bromham, Chippenham image" />
            </a>
        </div>
        <div class="col-md-8">
            <blockquote>
                <p>You're simply the best! I instructed eight other agents months before you, you found a buyer in one week and we completed in six!</p>
                <cite title="Source Title">Mr Sutton, Hertfordshire</cite>
            </blockquote>
        </div>
    </div>
</div>