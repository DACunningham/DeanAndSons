@model DeanAndSons.Models.WAP.ViewModels.MessageCreateViewModel

@{
    ViewBag.Title = "NewMessage";
}

@* ********** Page Header ********** *@

<div class="container-fluid dc-header">
    <div class="container">
        <header>
            <div class="logo1">Dean & Sons.</div>
            <div class="logo2">Family Estate Agency</div>
            <div class="col-md-12 dc-pageHead">
                <p class="pageTitle">Send New Message</p>
            </div>

        </header>
    </div>
</div>

<div class="container body-content">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <h3>What Would You Like To Say?</h3>
            <hr />

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ConversationID)

            <div class="form-group">
                @Html.LabelFor(model => model.Body, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.Body, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Body, "", new { @class = "text-danger" })
                </div>
            </div>

            @* ********** Buttons ********** *@

            <div class="row">

                <div class="col-md-offset-2 col-md-6">
                    @Html.ActionLink("Cancel", "Details", "Conversations", new { id = Model.ConversationID }, new { @class = "btn btn-default pull-left", role = "button" })
                </div>

                <div class="col-md-4">
                    <button type="submit" class="btn btn-success pull-right">Create</button>
                </div>

            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}