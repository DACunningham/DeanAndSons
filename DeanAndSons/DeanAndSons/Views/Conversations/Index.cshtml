@using Microsoft.AspNet.Identity
@model IEnumerable<DeanAndSons.Models.WAP.Conversation>

@{
    ViewBag.Title = "Index";
}

@* ********** Page Header ********** *@

<div class="container-fluid dc-header">
    <div class="container">
        <header>
            <div class="logo1">Dean & Sons.</div>
            <div class="logo2">Family Estate Agency</div>
            <div class="col-md-12 dc-pageHead">
                <p class="pageTitle">Conversation Index</p>
            </div>

        </header>
    </div>
</div>

<div class="container body-content">

    <table class="table">
        <tr>
            <th>
                From
            </th>
            <th>
                To
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastNewMessage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastCheckedSender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastCheckedReceiver)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Sender.Forename) 
                    @Html.DisplayFor(modelItem => item.Sender.Surname)
                    
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Receiver.Forename)
                    @Html.DisplayFor(modelItem => item.Receiver.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastNewMessage)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastCheckedSender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastCheckedReceiver)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.ConversationID }, new { @class = "btn btn-default btn-sm pull-right", role = "button" })
                </td>
            </tr>
        }

    </table>

    <div class="row">
        <div class="col-md-6">
            @Html.ActionLink("My Profile", "ProfileDetails", "Account", new { userID = User.Identity.GetUserId() }, new { @class = "btn btn-default", role = "button" })
        </div>
        <div class="col-md-6">
            @Html.ActionLink("New Conversation", "Create", null, new { @class = "btn btn-success pull-right", role = "button" })
        </div>
    </div>

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}