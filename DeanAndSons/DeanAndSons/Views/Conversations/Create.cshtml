@using Microsoft.AspNet.Identity
@model DeanAndSons.Models.WAP.ViewModels.ConversationCreateViewModel

@{
    ViewBag.Title = "Create";
}

@* ********** Page Header ********** *@

<div class="container-fluid dc-header">
    <div class="container">
        <header>
            <div class="logo1">Dean & Sons.</div>
            <div class="logo2">Family Estate Agency</div>
            <div class="col-md-12 dc-pageHead">
                <p class="pageTitle">Create New Conversation</p>
            </div>

        </header>
    </div>
</div>

<div class="container body-content">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <h3>Who Would You Like To Talk To?</h3>
            <hr />

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(model => model.ReceiverID, "Recipient", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("ReceiverID", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ReceiverID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Body, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.Body, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Body, "", new { @class = "text-danger" })
                </div>
            </div>

            @* ********** Buttons ********** *@

            <div class="row dc-btn-space">

                <div class="col-md-offset-2 col-md-6">
                    @Html.ActionLink("Cancel", "Index", "Conversations", new { userId = User.Identity.GetUserId() }, new { @class = "btn btn-default pull-left", role = "button" })
                </div>

                <div class="col-md-4">
                    <button type="submit" class="btn btn-success pull-right">Create</button>
                </div>

            </div>
        </div>
    }

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}